#!/bin/bash

(
  cd "$(dirname "$0")"
  (
    echo "[Adblock Plus 1.1]"
    echo "! Title: adblock-wikipedia"
    echo "! Homepage: https://github.com/kbinani/adblock-wikipedia"
    echo "! License: https://github.com/kbinani/adblock-wikipedia/blob/master/LICENSE"
    cat blacklist.txt | sort
  ) | python ext/adblockplus/addChecksum.py > signed.txt

  cat signed.txt | python ext/adblockplus/validateChecksum.py
)
